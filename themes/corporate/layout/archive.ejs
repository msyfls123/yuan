<%
  var primary = config.main_categories[0]
  var secondary= config.main_categories[1]
  var primaryCategory = site.categories.data.find(cat => cat.name === primary)
  var secondaryCategory = site.categories.data.find(cat => cat.name === secondary)
%>
<%- partial('_partial/tabs', { current: primary }) %>
<div class="container">
  <div id="main" class="archive-main">
    <%# partial('_partial/archive', {pagination: config.archive, index: false}) %>
    <div class="col-md-8 main-archive">
      <h1>
        <%- primary %>
      </h1>
      <%- partial('_partial/card-list', { posts: primaryCategory ? primaryCategory.posts.sort('date', 'desc').sort('weight', 'desc') : [] }) %>
    </div>
    <div class="col-md-4 secondary-archive">
      <h1>
        <%- secondary %>
      </h1>
      <%- partial('_partial/side-list', { posts: secondaryCategory ? secondaryCategory.posts.sort('date', 'desc').sort('weight', 'desc') : [] }) %>
    </div>
  </div>
</div>
