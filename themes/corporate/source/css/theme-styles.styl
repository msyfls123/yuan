.article-nav
  display: flex
  justify-content: space-between
  font-size: 20px
  .nav-link
    color: rgba($black, .45)
    text-decoration: none
    display: flex
    align-items: center
    &:hover
      color: rgba($black, .75)
  .nav-title
    ellipsis()
  .fa
    margin: 0 7px
  @media mobile_query
    .nav-title
      font-size: 0
      &.left::before
        content: '前一篇'
        font-size: 20px
      &.right::before
        content: '后一篇'
        font-size: 20px

.showcase-section
  margin-top: 96px
  h2
    margin: 0 0 40px
    font-size: 32px
    color: rgba($black, .85)
  .intro
    margin: -15px 0 96px
    font-size: 39px
    color: rgba($black, 0.85)
    line-height: 1.7
    @media mobile_query
      font-size: 24px
  .banner-list
    list-style: none
    padding: 0
    .primary-banner
      margin-bottom: 96px
      position: relative
      display: block
      size: 100% 686px
      background: no-repeat center / cover
      &::before
        content: ''
        display: block
        size: 100%
        top: 0
        left: 0
        background: rgba(#000, .2)
        transition: all .3s ease
      &:hover::before
        background: rgba(#000, .4)
